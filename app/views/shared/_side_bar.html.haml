.chatSide
  .sideHeader
    .sideHeader__item
      .sideHeader__item__userName
        = current_user.name
      %ul.sideHeader__item__lists
        %li.sideHeader__item__lists__list
        = link_to new_group_path do
          = icon('fa','edit')
        %li.sideHeader__item__lists__list
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__groupName
            = group.name
          .group__groupMessage
            = group.show_last_message